---
const navItems = [
  { label: "Home", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: "About", href: "/about" },
];
---

<header class="bg-white shadow">
  <nav class="container mx-auto px-4 py-6">
    <ul class="flex gap-6">
      {
        navItems.map((item) => (
          <li>
            <a href={item.href} class="text-gray-700 hover:text-gray-900">
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
