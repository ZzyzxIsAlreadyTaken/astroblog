// No props or imports needed for this version
---

<form action="/search" method="get" class="w-full max-w-2xl mx-auto">
  <div class="relative">
    <input
      type="search"
      name="q"
      id="searchInput"
      placeholder="Search posts..."
      class="w-full p-4 border rounded-lg shadow-sm focus:ring-2 focus:ring-stone-500 focus:border-stone-500"
    />
    <button
      type="submit"
      class="absolute right-2 top-1/2 -translate-y-1/2 px-4 py-2 bg-stone-800 text-white rounded-md hover:bg-stone-700"
    >
      Search
    </button>
  </div>
</form>
